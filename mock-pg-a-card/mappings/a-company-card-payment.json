{
  "request": {
    "method": "POST",
    "url": "/v1/payments/card",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      },
      "X-API-KEY": {
        "equalTo": "A_COMPANY_SECRET_KEY_123"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.cardNumber != null && @.cardNumber !='')]"
      },
      {
        "matchesJsonPath": "$[?(@.cardCvc != null && @.cardCvc != '')]"
      },
      {
        "matchesJsonPath": "$[?(@.cardExpiryDate != null && @.cardExpiryDate !='')]"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "transactionId": "mock_card_tx_12345",
      "resultCode": "Success",
      "message": "Mock Card 승인완료"
    }
  }
}
